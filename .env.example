# AiLine â€” Environment variables
# Never commit real keys. Use a secret manager in production.

# === Docker Compose ===
# Host ports (change if collisions with other projects)
DB_HOST_PORT="5411"
REDIS_HOST_PORT="6311"
API_HOST_PORT="8011"
FRONTEND_HOST_PORT="3011"

# === Database (used by Compose and app) ===
POSTGRES_USER="ailine"
POSTGRES_PASSWORD="ailine_dev"
POSTGRES_DB="ailine"
# For local dev (outside Docker): point at localhost
AILINE_DB_URL="postgresql+asyncpg://ailine:ailine_dev@localhost:5411/ailine"
# SQLite alternative: AILINE_DB_URL="sqlite+aiosqlite:///./dev.db"

# === Redis ===
REDIS_PASSWORD="ailine_redis_dev"
AILINE_REDIS_URL="redis://:ailine_redis_dev@localhost:6311/0"

# === LLM Provider Keys ===
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-proj-..."
GEMINI_API_KEY="AIza..."
OPENROUTER_API_KEY="sk-or-v1-..."

# === Models ===
AILINE_PLANNER_MODEL="anthropic:claude-opus-4-6"
AILINE_EXECUTOR_MODEL="google-gla:gemini-3-flash-preview"
AILINE_QG_MODEL="anthropic:claude-sonnet-4-5"
AILINE_TUTOR_MODEL="anthropic:claude-sonnet-4-5"
AILINE_PLANNER_EFFORT="high"

# === LLM Provider (anthropic|openai|gemini|openrouter) ===
AILINE_LLM_PROVIDER="anthropic"

# === Embedding Provider (gemini|openai|local|openrouter) ===
AILINE_EMBEDDING_PROVIDER="gemini"
AILINE_EMBEDDING_MODEL="gemini-embedding-001"
AILINE_EMBEDDING_DIMENSIONS="3072"

# === Vector Store (pgvector|qdrant|chroma) ===
AILINE_VECTORSTORE_PROVIDER="pgvector"

# === Refinement ===
AILINE_MAX_REFINEMENT_ITERS="2"

# === Local Store (MVP fallback) ===
AILINE_LOCAL_STORE=".local_store"

# === DeepAgents Skills ===
AILINE_SKILL_SOURCES=""
AILINE_PLANNER_USE_SKILLS="1"
AILINE_PERSONA_USE_SKILLS="1"

# === Exports ===
AILINE_ENABLE_EXPORTS="1"
AILINE_DEFAULT_VARIANTS="standard_html,low_distraction_html,large_print_html,high_contrast_html,dyslexia_friendly_html,screen_reader_html,visual_schedule_html,student_plain_text,audio_script"

# === Media (STT/TTS) ===
ELEVENLABS_API_KEY=""
GOOGLE_TTS_KEY=""
HANDTALK_API_KEY=""

# === Dev Mode (enables X-Teacher-ID header bypass for local dev) ===
AILINE_DEV_MODE="false"

# === Demo Mode ===
AILINE_DEMO_MODE="0"

# === Rate Limiting ===
AILINE_RATE_LIMIT_RPM="60"
# Comma-separated IPs of trusted reverse proxies (for X-Forwarded-For)
AILINE_TRUSTED_PROXIES=""

# === Server ===
HOST="0.0.0.0"
PORT="8011"

# === Frontend ===
NEXT_PUBLIC_API_URL="http://localhost:8011"
